{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar post</h3>

<div class="card mt-3">
	<div class="card-body">
		
	<form action="/admin/posts/edit" method="post">
	  <div class="form-group">
	  	<input type="hidden" value="{{post._id}}" name="id">
	    <label for="titulo">Titulo</label>
	    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Titulo" required="" value="{{post.titulo}}">

	    <label for="descricao">Descrição</label>
	    <input type="text" class="form-control" name="descricao" id="descricao" placeholder="Descrição" required="" value="{{post.descricao}}">


	    <label for="slug">Slug</label>
	    <input type="text" class="form-control" name="slug" id="descricao" placeholder="Slug-separado-por-hifen" required="" value="{{post.slug}}">

	    <label for="texto">Texto</label>
	    <textarea class="form-control" name="conteudo" placeholder="Texto" required="">{{post.conteudo}}</textarea>

	    <label for="categoria">Categoria</label>
	    <select name="categoria" class="form-control" required="">
	    	{{#each categorias}}
	    	<option value="{{_id}}">{{titulo}}</option>>
	    	{{else}}
	    	<option value="0">Nenhuma categoria</option>>
	    	{{/each}}
	    </select>
 
	  </div>

	  <div class="form-group">
	    <button type="submit" class="btn btn-primary">Editar post</button>
	  </div>
	</form>
	</div>
</div>