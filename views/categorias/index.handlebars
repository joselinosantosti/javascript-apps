<h4>Categorias</h4>
<hr>

{{#each categorias}}
<a href="/categorias/{{slug}}">
	<div class="card mt-3" style="cursor: pointer">
		<div class="card-body">
		<div class="row">
			<div class="col-8">
				<h4 class="text-dark">{{titulo}}</h4>
			</div>
		</div>
		</div>
	</div>
	</a>
{{else}}
<h4 class="mt-3">Nenhuma categoria cadastrada</h4>
{{/each}}