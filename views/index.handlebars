<h2>Posts recentes</h2>

<div class="row">
	<div class="card-columns">
		{{#each posts}}
		<a href="/post/{{slug}}">
		<div class="card bg-purple text-light">
		<img class="card-img" src="/img/img.png" alt="Card image">
		<div class="card-img-overlay">
			<h2 class="card-title">{{titulo}}</h2>
			<!--<p class="card-text">{{descricao}}</p>-->
			<p class="card-text">By Fulano {{data}}</p>

		</div>
		  <div class="card-footer">
			  <strong class="text-white">{{categoria.titulo}}</strong>
		</div>
	</div>
	</a>
	{{else}}
		<h5>Nenhum post</h5>
	{{/each}}

</div>
</div>



