<h2>{{categoria.titulo}} </h2>

{{#each albuns}}
	<div class="card mt-3">
		<div class="card-body">
			<h3>{{titulo}}</h3>
			<p>{{descricao}}</p>
			<hr>
			<div>
				<small>{{data}}</small>
			<br>
				<small>{{categoria.titulo}}</small>
			</div>
			 <a class="btn btn-primary" href="/post/{{slug}}" role="button">Leia mais</a>
		</div>
	</div>
{{else}}
	<h5>Nenhum album</h5>
{{/each}}